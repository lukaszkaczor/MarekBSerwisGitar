@model List<SerwisGitar.Models.DbModels.Order>

@{
    ViewBag.Title = "Lista zamówień";
}

<h4>Lista aktywnych zamówień</h4>

<p>
    @Html.ActionLink("Wróć", "Index", "Admin" , null , new { @class ="btn btn-primary"})
</p>
<table class="table">
    <tr>
        <th>
            Id zamówienia
        </th>
        <th>
            Data zamówienia
        </th>
        <th>Szczegóły</th>
    </tr>

    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OrderId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderDate)
            </td>
            <td>
                @using (Html.BeginForm("AddOrder", "OrdersManagement", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    @Html.Hidden("id", item.OrderId)
                    <button type="submit" class="btn btn-success">Przyjmij</button>
                }
            </td>
        </tr>
    }

</table>

